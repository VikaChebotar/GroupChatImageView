<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupchatimageview.MainActivity">

    <com.groupchatimageview.GroupChatImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        custom:firstImage="@drawable/me"
        custom:secondImage="@drawable/me2"
        custom:viewShape="rounded_rectangle"
        custom:cornerRadius="100dp"
        custom:dividerWidth="3dp"
        custom:dividerColor="@color/colorAccent"
        custom:showDivider="true"
        />
</RelativeLayout>
