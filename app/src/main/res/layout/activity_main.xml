<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupchatimageview.MainActivity">

    <com.groupchatimageview.GroupChatImageView
        android:id="@+id/chatImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        custom:showDivider="true"
        android:paddingTop="30dp"
        custom:cornerRadius="10dp"
        android:layout_centerInParent="true"
        custom:firstImage="@drawable/alex"
        custom:secondImage="@drawable/me"
        custom:viewShape="rounded_rectangle" />


</RelativeLayout>
